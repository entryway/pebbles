

<% cart.ordered_cart_items.each do |cart_item| %>
	<tr>
		<% cart_item.price %>
	    <td class="prodcol">
			<%= link_to cart_item.product.name,
	           			category_product_path(cart_item.product.category,
						cart_item.product) %>
			<% if cart_item.option_selections.size > 0 %>
   				(<%= render :partial => '/carts/cart_item_selections',
					   		:collection => cart_item.option_selections %>)
			<% end %>
		</td>
		<td class="standcol">
			<%= text_field_tag 'qty' + cart_item.id.to_s, cart_item.quantity, :size => 2 %>
		</td>
		<td class="standcol">
			<%= h(number_to_currency(cart_item.price)) %>
		</td>
		<td class="standcol">
			<%= h(number_to_currency(cart_item.price * cart_item.quantity)) %>
		</td>
		<td class="standcol">
			<%= link_to 'Remove', cart_cart_item_path(cart, cart_item),
						:confirm => "Are you sure you want to remove
									 #{cart_item.product.name}?",
						:method => :delete %>
		</td>
	</tr>
<% end %>


