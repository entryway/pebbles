<% form_tag(admin_product_accessory_path(@product), :id => 'category_selection_form') do |f| %>

  <select id="category_selector" size="20" name="category_id" class=".selector">
    <% for category in @categories %>
      <option value="<%= category.id %>">
        <% (category.level - 1).times do %>
          --
        <% end %>
        <%= category.name %>
      </option>
    <% end %>
  </select>

<% end %>