<% if category.category_images.count > 0 %>
  <h3><%= "This Category has the following images: "  %> </h3>

  <% category.category_images.each do |image| %>
  	<div style="display:inline">
  		<%= image_tag image.filename.url %>
  		<%= link_to 'Remove Image', admin_category_category_image_path(category, image),
  		    :class => "destroy-category-image" %>
  	</div>
  <% end %>
<% end %>