<div style="display:inline">

	<% form_for [:admin, category, CategoryIcon.new],
              :html => { :multipart => true, :id => 'category_icon_add' } do |form| %>
	  <p>
	    <label for="uploaded_data">Upload Image:</label>
	    <%= form.file_field :filename, :value => "Browse", :size => 15 %>
	  </p>
	  <p>
	    <%= submit_tag 'Upload' %>
	  </p>
	<% end %>

</div>